<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Chat Room</title>
    </head>
    <body>
        <div id="chat-history">
            <% for (const message of messages) { %>
                <p><%= message %></p>
            <% } %>
        </div>
        <form id="chat-message-box" action="post">
            <input id="chat-message-box-text" type="text" name="message">
            <button type="submit">Send!</button>
        </form>
    </body>
    <script src="/js/room.js"></script>
</html>